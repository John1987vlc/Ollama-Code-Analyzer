{
    "name": "ollama-code-analyzer",
    "displayName": "Ollama Code Analyzer",
    "description": "Analiza tu código en tiempo real usando Ollama y modelos de IA locales",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": ["Other", "Linters", "Programming Languages"],
    "keywords": ["ollama", "ai", "code analysis", "suggestions", "local ai"],
    "activationEvents": [
        "onLanguage:csharp",
        "onLanguage:javascript",
        "onLanguage:typescript",
        "onLanguage:python"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "ollamaCodeAnalyzer.analyzeCurrentDocument",
                "title": "Analizar Documento Actual",
                "category": "Ollama"
            },
            {
                "command": "ollamaCodeAnalyzer.clearDiagnostics",
                "title": "Limpiar Diagnósticos",
                "category": "Ollama"
            },
            {
                "command": "ollamaCodeAnalyzer.showRecommendedModels",
                "title": "Mostrar Modelos Recomendados",
                "category": "Ollama"
            },
            {
                "command": "ollamaCodeAnalyzer.configureModel",
                "title": "Configurar Modelo",
                "category": "Ollama"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "ollamaCodeAnalyzer.analyzeCurrentDocument",
                    "when": "resourceLangId in ollamaCodeAnalyzer.supportedLanguages",
                    "group": "1_modification"
                }
            ],
            "commandPalette": [
                {
                    "command": "ollamaCodeAnalyzer.analyzeCurrentDocument",
                    "when": "editorIsOpen"
                }
            ]
        },
        "configuration": {
            "title": "Ollama Code Analyzer",
            "properties": {
                "ollamaCodeAnalyzer.baseUrl": {
                    "type": "string",
                    "default": "http://localhost:11434",
                    "description": "URL base del servicio Ollama"
                },
                "ollamaCodeAnalyzer.model": {
                    "type": "string",
                    "default": "codellama:7b",
                    "description": "Modelo de Ollama a usar para análisis de código"
                },
                "ollamaCodeAnalyzer.timeout": {
                    "type": "number",
                    "default": 45000,
                    "description": "Timeout en milisegundos para las solicitudes (45 segundos por defecto)"
                },
                "ollamaCodeAnalyzer.autoAnalyze": {
                    "type": "boolean",
                    "default": true,
                    "description": "Analizar automáticamente el código mientras escribes"
                },
                "ollamaCodeAnalyzer.analyzeOnOpen": {
                    "type": "boolean",
                    "default": false,
                    "description": "Analizar automáticamente cuando se abre un archivo"
                },
                "ollamaCodeAnalyzer.supportedLanguages": {
                    "type": "array",
                    "default": ["csharp", "javascript", "typescript", "python", "java", "cpp", "c"],
                    "description": "Lenguajes soportados para análisis automático",
                    "items": {
                        "type": "string"
                    }
                },
                "ollamaCodeAnalyzer.maxLines": {
                    "type": "number",
                    "default": 200,
                    "description": "Número máximo de líneas para analizar (evita archivos muy grandes)"
                },
                "ollamaCodeAnalyzer.debounceDelay": {
                    "type": "number",
                    "default": 800,
                    "description": "Delay en milisegundos antes de analizar después de cambios (debounce)"
                },
                  "ollamaCodeAnalyzer.gitea.baseUrl": {
                    "type": "string",
                    "default": "",
                    "description": "URL base de tu instancia de Gitea (ej. https://gitea.com)"
                  },
                  "ollamaCodeAnalyzer.gitea.token": {
                    "type": "string",
                    "default": "",
                    "description": "Token de acceso de Gitea"
                  },
                  "ollamaCodeAnalyzer.gitea.organization": {
                    "type": "string",
                    "default": "",
                    "description": "Organización en Gitea"
                  },
                  "ollamaCodeAnalyzer.gitea.repository": {
                    "type": "string",
                    "default": "",
                    "description": "Repositorio en Gitea"
                  }
            }
        },
        "keybindings": [
            {
                "command": "ollamaCodeAnalyzer.analyzeCurrentDocument",
                "key": "ctrl+alt+a",
                "mac": "cmd+alt+a",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "eslint": "^8.28.0",
        "typescript": "^4.9.4"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tu-usuario/ollama-code-analyzer.git"
    },
    "bugs": {
        "url": "https://github.com/tu-usuario/ollama-code-analyzer/issues"
    },
    "homepage": "https://github.com/tu-usuario/ollama-code-analyzer#readme",
    "license": "MIT"
}