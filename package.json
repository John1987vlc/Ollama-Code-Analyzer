{
  "name": "ollama-code-analyzer",
  "displayName": "Ollama Code Analyzer",
  "description": "Analiza tu código en tiempo real usando Ollama y modelos de IA locales",
  "publisher": "ollama-code-analyzer-Gemma3n-Gitea",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Linters",
    "Programming Languages"
  ],
  "keywords": [
    "ollama",
    "ai",
    "code analysis",
    "suggestions",
    "local ai"
  ],
  "activationEvents": [
    "onLanguage:csharp",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:python",
    "onLanguage:java",
    "onLanguage:cpp",
    "onLanguage:c"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ollamaCodeAnalyzer.analyzeCurrentDocument",
        "title": "Analizar Documento Actual",
        "category": "Gemma3n Analysis"
      },
      {
        "command": "ollamaCodeAnalyzer.clearDiagnostics",
        "title": "Limpiar Diagnósticos",
        "category": "Gemma3n Analysis"
      },
      {
        "command": "ollamaCodeAnalyzer.configureModel",
        "title": "Configurar Modelo",
        "category": "Gemma3n Analysis"
      },
      {
        "command": "ollamaCodeAnalyzer.generateCodeFromComment",
        "title": "Generar código desde comentario (///)",
        "category": "Gemma3n Analysis"
      },
      {
        "command": "ollamaCodeAnalyzer.findSuggestions",
        "title": "Buscar sugerencias de refactorización",
        "category": "Gemma3n Analysis"
      },
      {
        "command": "ollamaCodeAnalyzer.conceptualRefactor",
        "title": "Proponer refactorización inteligente",
        "category": "Gemma3n Analysis"
      },
      {
        "command": "ollamaCodeAnalyzer.explainCode",
        "title": "Explicar código seleccionado",
        "category": "Gemma3n Analysis"
      },
      {
        "command": "ollamaCodeAnalyzer.checkCompanyStandards",
        "title": "Validar estándares de empresa",
        "category": "Gemma3n Analysis"
      },
      {
        "command": "ollamaCodeAnalyzer.generateUnitTest",
        "title": "Generar prueba unitaria",
        "category": "Gemma3n Analysis"
      },
      {
        "command": "ollamaCodeAnalyzer.findDuplicateLogic",
        "title": "Detectar lógica duplicada",
        "category": "Gemma3n Analysis"
      },
      {
        "command": "ollamaCodeAnalyzer.generateUmlDiagram",
        "title": "Generar Diagrama UML del proyecto",
        "category": "Gemma3n Analysis"
      }
    ],
    "submenus": [
      {
        "id": "gemma3nAnalysisSubmenu",
        "label": "Gemma3n Analysis"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "gemma3nAnalysisSubmenu",
          "group": "navigation@1",
          "when": "editorTextFocus"
        }
      ],
      "gemma3nAnalysisSubmenu": [
        {
          "command": "ollamaCodeAnalyzer.analyzeCurrentDocument",
          "group": "1_analysis@1"
        },
        {
          "command": "ollamaCodeAnalyzer.checkCompanyStandards",
          "group": "1_analysis@2"
        },
        {
          "command": "ollamaCodeAnalyzer.findDuplicateLogic",
          "group": "1_analysis@3"
        },
        {
          "command": "ollamaCodeAnalyzer.findSuggestions",
          "group": "2_refactor@1"
        },
        {
          "command": "ollamaCodeAnalyzer.conceptualRefactor",
          "group": "2_refactor@2"
        },
        {
          "command": "ollamaCodeAnalyzer.explainCode",
          "group": "2_refactor@3"
        },
        {
          "command": "ollamaCodeAnalyzer.generateUnitTest",
          "group": "2_refactor@4"
        },
        {
          "command": "ollamaCodeAnalyzer.generateCodeFromComment",
          "group": "3_generation@1"
        },
        {
          "command": "ollamaCodeAnalyzer.generateUmlDiagram",
          "group": "3_generation@2"
        },
        {
          "command": "ollamaCodeAnalyzer.configureModel",
          "group": "9_utility@1"
        },
        {
          "command": "ollamaCodeAnalyzer.clearDiagnostics",
          "group": "9_utility@2"
        }
      ]
    },
    "keybindings": [
      {
        "command": "ollamaCodeAnalyzer.generateCodeFromComment",
        "key": "ctrl+shift+j",
        "mac": "cmd+shift+j",
        "when": "editorTextFocus"
      },
      {
        "command": "ollamaCodeAnalyzer.conceptualRefactor",
        "key": "ctrl+shift+h",
        "mac": "cmd+shift+h",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "ollamaCodeAnalyzer.explainCode",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "ollamaCodeAnalyzer.generateUnitTest",
        "key": "ctrl+shift+u",
        "mac": "cmd+shift+u",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "ollamaCodeAnalyzer.checkCompanyStandards",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Ollama Code Analyzer",
      "properties": {
        "ollamaCodeAnalyzer.baseUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "URL base del servicio Ollama"
        },
        "ollamaCodeAnalyzer.model": {
          "type": "string",
          "default": "codellama:7b",
          "description": "Modelo de Ollama a usar para análisis de código"
        },
        "ollamaCodeAnalyzer.timeout": {
          "type": "number",
          "default": 45000,
          "description": "Timeout en milisegundos para las solicitudes (45 segundos por defecto)"
        },
        "ollamaCodeAnalyzer.autoAnalyze": {
          "type": "boolean",
          "default": false,
          "description": "Analizar automáticamente el código mientras escribes"
        },
        "ollamaCodeAnalyzer.analyzeOnOpen": {
          "type": "boolean",
          "default": false,
          "description": "Analizar automáticamente cuando se abre un archivo"
        },
        "ollamaCodeAnalyzer.supportedLanguages": {
          "type": "array",
          "default": [
            "csharp",
            "javascript",
            "typescript",
            "python",
            "java",
            "cpp",
            "c"
          ],
          "description": "Lenguajes soportados para análisis automático",
          "items": {
            "type": "string"
          }
        },
        "ollamaCodeAnalyzer.maxLines": {
          "type": "number",
          "default": 200,
          "description": "Número máximo de líneas para analizar (evita archivos muy grandes)"
        },
        "ollamaCodeAnalyzer.debounceDelay": {
          "type": "number",
          "default": 800,
          "description": "Delay en milisegundos antes de analizar después de cambios (debounce)"
        },
        "ollamaCodeAnalyzer.gitea.baseUrl": {
          "type": "string",
          "default": "",
          "description": "URL base de tu instancia de Gitea (ej. https://gitea.com)"
        },
        "ollamaCodeAnalyzer.gitea.token": {
          "type": "string",
          "default": "",
          "description": "Token de acceso de Gitea"
        },
        "ollamaCodeAnalyzer.gitea.organization": {
          "type": "string",
          "default": "",
          "description": "Organización en Gitea"
        },
        "ollamaCodeAnalyzer.gitea.repository": {
          "type": "string",
          "default": "",
          "description": "Repositorio en Gitea"
        },
        "ollamaCodeAnalyzer.customPrompts": {
          "type": "object",
          "title": "Prompts Personalizados",
          "description": "Define instrucciones personalizadas para cada tipo de acción de la IA.",
          "default": {},
          "properties": {
            "analysis": {
              "type": "object",
              "title": "Análisis de Código",
              "description": "Instrucciones para el análisis general de calidad de código.",
              "properties": {
                "additional_instructions": {
                  "type": "array",
                  "description": "Lista de reglas adicionales para el análisis. Cada elemento es una nueva regla.",
                  "items": {
                    "type": "string"
                  },
                  "default": []
                }
              }
            },
            "conceptual_refactor": {
              "type": "object",
              "title": "Refactorización Conceptual",
              "description": "Contexto para la refactorización inteligente.",
              "properties": {
                "context": {
                  "type": "string",
                  "description": "Contexto adicional para guiar la refactorización (ej: 'Estamos migrando a TypeScript').",
                  "default": ""
                }
              }
            },
            "generation": {
              "type": "object",
              "title": "Generación de Código",
              "description": "Guías para la generación de nuevo código.",
              "properties": {
                "style_guide": {
                  "type": "string",
                  "description": "Guía de estilo a seguir (ej: 'Usar estilo Airbnb, async/await para promesas').",
                  "default": ""
                }
              }
            },
            "test_generation": {
              "type": "object",
              "title": "Generación de Pruebas",
              "description": "Guías para generar pruebas unitarias.",
              "properties": {
                "preferred_framework": {
                  "type": "string",
                  "description": "Framework de testing preferido (ej: 'Jest', 'Mocha').",
                  "default": "Jest"
                },
                "testing_style": {
                  "type": "string",
                  "description": "Estilo de las pruebas a generar (ej: 'Enfocarse en pruebas de caja negra').",
                  "default": ""
                }
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "build": "tsc && cpx \"src/prompts/**/*.json\" out/prompts",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "mocha -r ts-node/register ./out/test/*.test.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "16.x",
    "@types/node-fetch": "^2.6.12",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "cpx": "^1.5.0",
    "eslint": "^8.57.0",
    "mocha": "^11.7.1",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/John1987vlc/Ollama-Code-Analyzer.git"
  },
  "bugs": {
    "url": "https://github.com/John1987vlc/Ollama-Code-Analyzer/issues"
  },
  "homepage": "https://github.com/John1987vlc/Ollama-Code-Analyzer#readme",
  "license": "CC0-1.0",
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}